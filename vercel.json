{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "builds": [
    {
      "src": "server/api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/api/$1" },
    { "source": "/(assets/.+)", "destination": "/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}